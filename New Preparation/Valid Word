class Solution {
public:
    bool isValid(string word) 
    {
        if(word.length()<3){
            return false;
        }
        bool hasvowel=false;
        bool hascons=false;
        for(char ch:word)
        {
            if(isalpha(ch)){
                ch=tolower(ch);

            
            if(ch=='a'|| ch=='e'|| ch=='i'|| ch=='o'||ch=='u'){
                hasvowel=true;
            }
            else{
                hascons=true;
            }
        }
            else if(!isdigit(ch)){
                return false;
            }

        }
        return hasvowel && hascons;
        
    }
};
